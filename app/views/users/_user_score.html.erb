<div class="ranking-list">
  <div class="friend-name no1">
    <h2><%= score_counter + 1 %>, <%= link_to score.friend.name, user_path(score.friend) %></h2>
    <h3>親密度:
      <big>
        <%= number_to_percentage(score.score / @max_score * 100, precision: 0) %>
      </big>
    </h3>
  </div>
  <div class="friend-photo">
    <%= image_tag score.photos.first.photo_url %>
  </div>
</div>
